' Gambas class file

Public Sub Form_Open()

    Me.Title = "Flujo de Caja En Casa de Apuesta: Ingreso"
    ComboBoxCasa.list = Split(File.Load("casas.txt"), "\n")
    ComboBoxFuente.List = Split(File.Load("fuentes.txt"), "\n")

End

Public Sub ButtonIngresoCasa_Click()

    Dim textoDiaHora As String = Format(Now, "yyyy/mm/dd hh:nn:ss")

    'hacer una retirada del dinero de la fuente
    Fuentes.guardardatos(ComboBoxFuente.text, "6_Otra", ValueBoxCantidad.value, "Desde " & ComboBoxFuente.text & " a " & ComboBoxCasa.text & " el dia " & textoDiaHora)

    'hacer un ingreso en la Casa de Apuesta
    CasasApuestas.guardardatos("6_Otra", ComboBoxCasa.text, ValueBoxCantidad.value, "Desde " & ComboBoxFuente.text & " a " & ComboBoxCasa.text & " el dia " & textoDiaHora)
    Me.Close()

End

Public Sub ButtonCancelar_Click()

    Me.Close()

End
